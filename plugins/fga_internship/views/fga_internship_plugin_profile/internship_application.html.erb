<div class="internship-box">
	<div class="internship-card internship-main-card">
		<h1>Matrícula em Estágio</h1>
	  <div class="checklist-container">
			<% @checklists.each do |checklist| %>
				<%= render partial: 'partials/checklist', locals: { :checklist => checklist } %>
			<% end %>
	  </div>
	  <div class="button-container">
			<%= button(:back, "Voltar", { :controller => "internship", :action => "internship_pre_application", :community_id => params[:community_id] } , { :class => "internship_button internship_main_button" }) %>
			<%= button(:next, "Estágio em Andamento", { :controller => "internship", :action => "internship_in_progress", :community_id => params[:community_id] } , { :class => "internship_button internship_main_button" }) %>
	  </div>
	</div>
</div>
