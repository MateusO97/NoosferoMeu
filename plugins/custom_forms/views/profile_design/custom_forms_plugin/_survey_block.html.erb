<div class="survey-block-edition">
  <%= labelled_form_field _('Survey limit'), number_field_tag('block[metadata][limit]', @block.limit, min: 1, max: 10) %>
  <%= labelled_form_field _('Display surveys:'), select_tag('block[metadata][status]', options_from_collection_for_select(@block.class.status_options, :first, :last, @block.status)) %>
  <%= labelled_check_box('Provide partial results', 'block[metadata][provide_partial_results]', "1", @block.provide_partial_results?) %>
</div>
