<tr id="selected-category-<%= category.id %>" class="selected-category" data-id="<%= category.id %>">
  <%= hidden_field_tag("#{object_name}[category_ids][]", category.id) %>
  <td style='width: 80%'><%= category_humane_path(category) %></td>
  <td style="text-align: center; width: 20%">
    <%= button_to_function_without_text(:remove, _('Remove'), "remove_category(#{category.id})") %>
  </td>
</tr>
